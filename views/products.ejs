<%- include('./components/header') %>

<body> 

    <%- include('./components/navigation') %>

    
    <form id="update_form" method="post" action="/functions/edit_category/<%=category.id%>">

        <div class="container">

            <div class="row">

                <div class="col-lg-2">
                    <img src="<%= category.categorymainImage %>" style="width: 100px;">
                </div>

                <div class="col-lg-4">
                    <label  class="form-label">Category Name</label>
                    <input type="text" class="form-control" name="categoryname" value="<%=category.categoryname%>" style="margin-right: 80px;"  >
                </div>
                <div class="col-lg-4">
                    <label  class="form-label">Category Image</label>
                    <input type="text" class="form-control" name="categorymainImage" value="<%=category.categorymainImage%>" style="margin-right: 80px;"  >
                </div>

                <div class="col-lg-2">
                    <button style="margin-top: 30px;" from="update_form" type="submit" class="btn btn-primary">Update</button>
                </div>

            </div>

        </div>
    

    </form>

    <hr color="blue" size="10px" />






    <div class="container" style="margin-top: 30px;">

        <div class="row">

            <div class="col-lg-3">
                <h3>add product</h3>

                <form id="add_product_form" method="post" action="/functions/add_product/<%=category.id%>">

                        <label  class="form-label">product Name</label>
                        <input type="text" class="form-control" name="productname" >

                        <label  class="form-label">product Image</label>
                        <input type="text" class="form-control" name="productImage" >

                        <label  class="form-label">product Description</label>
                        <input type="text" class="form-control" name="productDescription" style="height: 50px;">

                        <label  class="form-label">product price</label>
                        <input type="text" class="form-control" name="productprice" style="width: 100px;" >

                        <label  class="form-label">Units In Stock</label>
                        <input type="text" class="form-control" name="unitInStock" style="width: 100px;" >

                        <label  class="form-label">is Available</label>
                        
                        <select class="form-select" name="isAvailable" aria-label="Default select example">
                            <option selected value="true" >true</option>
                            <option value="false">false</option>
                        </select>

                        <button  form="add_product_form" type="submit" class="btn btn-primary" style="width: 50px; height: 50px; border-radius: 100%; margin-left: 110px;" >+</button>

                </form>

            </div>

            <div class="col-lg-9">

                <% if(Products.length > 0){ %>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Product Image</th>
                                <th>Product Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Units</th>
                                <th>Available</th>
                                <th>Actions</th>




                            </tr>
                        </thead>
                        <body>
                            <%let counter=0;%>
                            <%for(let Product of Products){%>
                                <%counter++%>

                                <tr>
                                    <td><%= counter %></td>
                                    <td><img src="<%= Product.productImage %>" style="width: 100px;"> </td>
                                    <td><%= Product.productname %></td>
                                    <td><%= Product.productDescription %></td>
                                    <td><%= Product.productprice %></td>
                                    <td><%= Product.unitInStock %></td>
                                    <td><%=Product.isAvailable%></td>


                                    <td>
                                        <a href="/edit_product/<%= Product.id %>" class="btn btn-info">edit</a>

                                        <form style="display: inline;" id="delete_product<%= Product.id %>" method="post" action="/functions/delete_prod/<%= Product.id %>/<%= category.id %>">
                                            <button  form="delete_product<%= Product.id %>" type="submit" class="btn btn-danger" >Delete</button>
                                        </form>

                                    </td>


                                </tr>
                            <%}%>
                        </body>
                    </table>
                <%} else {%>
                    <p>no data for you</p>
                <%}%>



            </div>

        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

</body>
</html>