<%- include('./components/header') %>

<body> 

    <%- include('./components/navigation') %>

    <div class="container" style="margin-top: 30px;">

        <div class="row">

            <div class="col-lg-3">
                <h3>add category</h3>

                <form id="add_category_form" method="post" action="/functions/add_category">

                        <label  class="form-label">Category Name</label>
                        <input type="text" class="form-control" name="categoryname" style="margin-right: 80px;"  >

                        <label  class="form-label">Category Image</label>
                        <input type="text" class="form-control" name="categorymainImage" style="margin-right: 80px;" >


                        <button  form="add_category_form" type="submit" class="btn btn-primary" style="width: 50px; height: 50px; border-radius: 100%; margin-left: 110px;" >+</button>

                </form>

            </div>

            <div class="col-lg-9">
                <% if(categories.length > 0){ %>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Category Image</th>
                                <th>Category Name</th>
                                <th>Actions</th>

                            </tr>
                        </thead>
                        <body>
                            <%let counter=0;%>
                            <%for(let category of categories){%>
                                <%counter++%>
                                <tr>
                                    <td><%= counter %></td>
                                    <td><img src="<%= category.categorymainImage %>" style="width: 100px;"> </td>
                                    <td><%= category.categoryname %></td>
                                    <td>
                                        <a href="/product/<%= category.id %>" class="btn btn-info">Products</a>
                                        <form style="display: inline;" id="delete_category<%= category.id %>" method="post" action="/functions/delete/<%= category.id %>">
                                            <button  form="delete_category<%= category.id %>" type="submit" class="btn btn-danger" >Delete</button>
                                        </form>

                                    </td>

                                </tr>
                            <%}%>
                        </body>
                    </table>
                <%} else {%>
                    <p>no data for you</p>
                <%}%>


            </div>



        </div>




    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

</body>
</html>